# RoyalBot Emby Portal - Environment Configuration
# 复制此文件为 .env 并修改相应配置

# ==================== 镜像配置 ====================
REGISTRY=ghcr.io/royalbot
IMAGE_TAG=latest

# ==================== 数据库配置 ====================
POSTGRES_PASSWORD=change_this_postgres_password

# ==================== Redis 配置 ====================
REDIS_PASSWORD=change_this_redis_password

# ==================== 安全密钥 ====================
# JWT 密钥 (生成: openssl rand -hex 32)
JWT_SECRET_KEY=change_this_jwt_secret_key_minimum_32_characters

# 默认管理员密码
DEFAULT_ADMIN_PASSWORD=change_this_admin_password

# 加密密钥 (用于加密敏感数据)
CRYPTO_KEY=change_this_crypto_key_32_bytes

# 定时任务鉴权密钥
CRON_SECRET=change_this_cron_secret

# ==================== 应用配置 ====================
DEBUG=false
FRONTEND_URL=https://login.laodaemby.xyz

# ==================== Telegram Bot ====================
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_BOT_USERNAME=your_bot_username

# ==================== 支付配置 ====================
YIPAY_GATEWAY_URL=
YIPAY_PARTNER_ID=
YIPAY_KEY=

# ==================== 部署配置 ====================
SKIP_PULL=false
